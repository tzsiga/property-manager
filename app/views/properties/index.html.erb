<% provide(:title, "Properties") %>
<p id="notice"><%= notice %></p>

<h1>Properties</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Rooms</th>
      <th>Facilities</th>
      <th>Category</th>
      <th>Rating</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @properties.each do |property| %>
      <tr>
        <td><%= property.name %></td>
        <td><%= property.rooms %></td>
        <td><%= property.facilities %></td>
        <td><%= property.category %></td>
        <td><%= property.rating %></td>
        <td><%= property.address %></td>
        <td><%= link_to 'Show', property %></td>
        <td><%= link_to 'Edit', edit_property_path(property) %></td>
        <td><%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br/>

<%= link_to 'New Property', new_property_path, class: 'btn btn-info' %>