<%= form_for(@reservation, :html => {:class => 'form-horizontal', :role => "form"}) do |f| %>

  <% if @reservation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@reservation.errors.count, "error") %> prohibited this reservation from being saved:</h2>

      <ul>
      <% @reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label(:property_id, class: 'control-label col-sm-2') %>
    <div class="col-sm-8">
      <%= collection_select(:reservation, :property_id, Property.all, :id, :name) %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:from, class: 'control-label col-sm-2') %>
    <div class="col-sm-4">
      <%= f.text_field(:from, class: 'form-control', id: 'from-date') %>
    </div>
    <script type="text/javascript">
      $('#from-date').datepicker({
        format: "yyyy.mm.dd",
        orientation: "top left",
        keyboardNavigation: false,
        autoclose: true,
        toggleActive: true
      });
    </script>
  </div>

  <div class="form-group">
    <%= f.label(:to, class: 'control-label col-sm-2') %>
    <div class="col-sm-4">
      <%= f.text_field(:to, class: 'form-control', id: 'to-date') %>
    </div>
    <script type="text/javascript">
      $('#to-date').datepicker({
        format: "yyyy.mm.dd",
        orientation: "top left",
        keyboardNavigation: false,
        autoclose: true,
        toggleActive: true
      });
    </script>
  </div>

  <div class="form-group">
    <%= f.label(:user_id, class: 'control-label col-sm-2') %>
    <div class="col-sm-8">
      <%= collection_select(:reservation, :user_id, User.all, :id, :email) %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit(:class => 'btn btn-success') %>
  </div>
<% end %>
