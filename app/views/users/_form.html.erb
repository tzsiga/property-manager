<%= form_for(@user, :html => {:class => 'form-horizontal', :role => "form"}) do |f| %>

  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>
      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label(:first_name, class: 'control-label col-sm-2') %>
    <div class="col-sm-8">
      <%= f.text_field(:first_name, class: 'form-control', placeholder: 'e.g. Barry') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:last_name, class: 'control-label col-sm-2') %>
    <div class="col-sm-8">
      <%= f.text_field(:last_name, class: 'form-control', placeholder: 'e.g. Allen') %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label(:email, class: 'control-label col-sm-2') %>
    <div class="col-sm-8">
      <%= f.text_field(:email, class: 'form-control', placeholder: 'e.g. sample@email.com') %>
    </div>
  </div>

  <div class="actions">
    <%= f.submit(:class => 'btn btn-success') %>
  </div>
<% end %>
