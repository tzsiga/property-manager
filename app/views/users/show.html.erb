<% provide(:title, "User details") %>
<p id="notice"><%= notice %></p>

<div class="show">
  <div class="row">
    <div class="col-sm-2">
      <strong>First name:</strong>
    </div>
    <div class="col-sm-10">
      <%= @user.first_name %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <strong>Last name:</strong>
    </div>
    <div class="col-sm-10">
      <%= @user.last_name %>
    </div>
  </div>

  <div class="row">
    <div class="col-sm-2">
      <strong>Email:</strong>
    </div>
    <div class="col-sm-10">
      <%= @user.email %>
    </div>
  </div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
